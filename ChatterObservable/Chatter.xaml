<Window x:Class="ChatterObservable.Chatter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatterObservable"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Chatter" Height="500" Width="500">
    <Grid>
        <Label Background="Aqua" Name="UserName" HorizontalContentAlignment="Center" Width="500" Height="50" Margin="0,0,0,434"/>
        <ListBox ItemsSource="{Binding Messages}" Margin="10,55,10,120"/>
        <TextBox Name="tbx_Message" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Height="30" Margin="12,369,0,0"/>
        <Button DockPanel.Dock="Bottom" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="30" Width="235" Click="Button_Click" Margin="255,369,0,0"/>
    </Grid>
</Window>
