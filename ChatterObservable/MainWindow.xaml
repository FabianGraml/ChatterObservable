<Window x:Class="ChatterObservable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatterObservable"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Start Client" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click" Width="132" Height="30"/>
        <TextBox Name="Username" HorizontalAlignment="Left" Margin="147,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" RenderTransformOrigin="-0.055,-0.617" Height="30"/>
        <Label Content="Nr Clients" HorizontalAlignment="Left" Margin="432,12,0,0" VerticalAlignment="Top" Width="117" Height="28"/>
        <Label Name="lbl_userCount" HorizontalAlignment="Left" Margin="549,12,0,0" VerticalAlignment="Top" Height="28"/>
        <ListBox ItemsSource="{Binding Messages}" Margin="10,62,355,10"/>
        <ListBox ItemsSource="{Binding Connections}" Margin="365,62,5,10"/>

    </Grid>
</Window>
